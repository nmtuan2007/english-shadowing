{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Backend Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/server.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: CLI - Generate Sources",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/app.py",
      "args": ["generate-sources"],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: CLI - Generate Lessons (All)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/app.py",
      "args": ["generate-lessons"],
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend: Chrome Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}